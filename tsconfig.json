{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "checkJs": false,
    "module": "esnext",
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "."
  },
  "exclude": [
    "setup.js",
    "node_modules/**",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "reactotron.config.js",
    "no-task.js"
  ]
}
