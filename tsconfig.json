{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "checkJs": false,
    "module": "esnext",
    "jsx": "react-native",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "."
  },
  "include": [
    "src",
    "__tests__",
    "storybook",
    "index.js",
    "babel.config.js",
    "TestNavigator.tsx",
    "types"
  ]
}
